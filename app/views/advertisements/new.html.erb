<h1>New Advertisement</h1>
   <div class="col-md-8">
     <%= form_for @advertisement do |a| %>
       <div class="form-group">

         <%= a.label :title %>

         <%= a.text_field :title, class: 'form-control', placeholder: "Enter Ad title" %>
       </div>
       <div class="form-group">
         <%= a.label :body %>
         <%= a.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Ad body" %>
       </div>
       <div class="form-group">
         <%= a.label :price %>
         <%= a.number_field :price, class: 'form-control', placeholder: "Enter price" %>
       </div>
       <div class="form-group">

         <%= a.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
